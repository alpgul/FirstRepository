<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
  
	<managed-bean>
		<managed-bean-name>HelloBean</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.HelloBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>messageBean</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.MessageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>PageController</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.PageController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>paymentController</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.paymentController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>language</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.LanguageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.UserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>dummy</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.DummyBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>order</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.OrderBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>person</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.PersonBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sorderbean</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.Sorderbean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>receipt</managed-bean-name>
		<managed-bean-class>tr.gulsoft.JSF_Tutorial.ReceiptBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>tutorial/3/page1.xhtml</display-name>
		<from-view-id>/tutorial/3/page1.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>page2</from-outcome>
			<to-view-id>/tutorial/3/page2.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/tutorial/4/start.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>payment</from-outcome>
			<if>#{paymentController.orderQty &lt; 100}</if>
			<to-view-id>/tutorial/4/ordermore.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>payment</from-outcome>
			<if>#{paymentController.registerCompleted}</if>
			<to-view-id>/tutorial/4/payment.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>payment</from-outcome>
			<to-view-id>/tutorial/4/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
	<from-view-id>/tutorial/5/start.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{PageController.processPage1}</from-action>
		<from-outcome>success</from-outcome>
		<to-view-id>/tutorial/5/page1.xhtml</to-view-id>
	</navigation-case>
	<navigation-case>
		<from-action>#{PageController.processPage2}</from-action>
		<from-outcome>success</from-outcome>
		<to-view-id>/tutorial/5/page2.xhtml</to-view-id>
		<redirect />
	</navigation-case>
    </navigation-rule>
	<application>
<!-- 	Customize Validation Error Message In JSF 2.0 -->
	<message-bundle>
	  	tr.gulsoft.JSF_Tutorial.MyMessage
	  </message-bundle>
	<locale-config>
     	        <default-locale>tr_TR</default-locale>
     	   </locale-config>
	   <resource-bundle>
		<base-name>tr.gulsoft.JSF_Tutorial.messages</base-name>
		<var>msg</var>
	   </resource-bundle>
	  <resource-bundle>
		<base-name>tr.gulsoft.JSF_Tutorial.testbundle</base-name>
		<var>lang</var>
	   </resource-bundle>
     </application>

</faces-config>